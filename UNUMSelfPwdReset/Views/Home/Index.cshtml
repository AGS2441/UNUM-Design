@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UserProfileViewModel
<style>

</style>
<div class="row mt-5 mb-5">

    <div class="alert alert-tra">


        <span class="float-start h-img">
            <svg fill="#19557f" width="40" font-weight="600" height="40" viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg"><path d="M800 384h-32V261.872C768 115.024 661.744 0 510.816 0 359.28 0 256 117.472 256 261.872V384h-32c-70.592 0-128 57.408-128 128v384c0 70.592 57.408 128 128 128h576c70.592 0 128-57.408 128-128V512c0-70.592-57.408-128-128-128zM320 261.872C320 152.784 394.56 64 510.816 64 625.872 64 704 150.912 704 261.872V384H320V261.872zM864.001 896c0 35.28-28.72 64-64 64h-576c-35.28 0-64-28.72-64-64V512c0-35.28 28.72-64 64-64h576c35.28 0 64 28.72 64 64v384zm-352-320c-35.344 0-64 28.656-64 64 0 23.632 12.96 44.032 32 55.12V800c0 17.664 14.336 32 32 32s32-14.336 32-32V695.12c19.04-11.088 32-31.504 32-55.12 0-35.344-28.656-64-64-64z" /></svg>
        </span>

        <div class="hrl">
            <strong style="font:xx-large" class="float-start f-26">Self Service Password Reset</strong>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a class="nav-link float-end mt-3 fs-13" asp-area="MicrosoftIdentity" style="border:none;color:#015294" asp-controller="Account" asp-action="SignOut">
                    <i class="fa fa-sign-out pr-5" aria-hidden="true"></i> Sign out
                </a>
            }
            else
            {
                <a class="nav-link float-end mt-3 fs-13" asp-area="MicrosoftIdentity" style="border:none;color:#015294" asp-controller="Account" asp-action="SignIn">
                    <i class="fa fa-sign-in pr-5" aria-hidden="true"></i> Sign in
                </a>
            }
        </div>
    </div>

</div>
<div class="cont">
    @if (Model.LoginClients != null)
    {
        int Sno = 0;
        <div class="row mb-1">
            <div class="col-3">
                @*<label class="h5">Total Count: <span class="fw-bold"> </span>@Model.LoginClients.Count</label>*@
            </div>
            <div class="col-6">
                <label class="h5">Want to...</label>
                <select id="ddchg" aria-expanded="true" style="height:100%;padding: 0 10px;">
                    <option value="1">Change Password</option>
                    <option value="2">Reset Or Forgot Password</option>
                </select>
            </div>
            <div class="col-3 text-right ">
            </div>
        </div>
        <div class="row">
            <div class="res">
                <div class="alert alert-secondary col-md-12">
                    <div class="ts-h col-md-12 float-start">
                        <div class="ts float-start">
                            <svg class="svg-primary" xmlns="http://www.w3.org/2000/svg" height="2.5rem" viewBox="0 0 24 24" width="2.5rem" fill="#00428c">
                                <path d="M0 0h24v24H0z" fill="none">

                                </path>
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"></path>
                            </svg>
                        </div>
                        <strong>
                            we recommend using the system-generated password, which is considered secure. However, if you prefer, you can create a new password of your choice to make sure it’s in line with the company’s security policies.
                        </strong>
                    </div>

                </div>
            </div>
        </div>
        @* <div class="alert-in">
    <p class="recom">
    <span class="f-26 ts"> <i class="fa-solid fa-circle-info fs-16 mr-3"></i></span>
    <span id="txt">  we recommend using the system-generated password, which is considered secure. However, if you prefer, you can create a new password of your choice to make sure it’s in line with the company’s security policies.</span>
    </p>
    </div>*@

        <div class="table-responsive mb-2" style="min-height:320px;padding-top:10px">
            <table class="table border " id="tblaccounts">
                <thead>
                    <tr class="bg-theme text-white">
                        <th>S.No</th>
                        <th>Account Type</th>
                        <th>Last Login</th>
                        <th>Expires In</th>
                        <th style="min-width:72px" class="text-center">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.LoginClients)
                    {
                        Sno++;
                        <tr>
                            <td>@Sno</td>

                            <td>@item.LoginType</td>
                            <td>@item.LastSignInAt?.ToString("yyyy-MM-dd | hh:mm tt")</td>
                            @if (item.ExpireInDays.HasValue)
                            {
                                <td>

                                    @if (item.ExpireInDays.Value >= 20)
                                    {
                                        <i class="fa fa-timer text-success" />
                                    }
                                    else if (item.ExpireInDays.Value >= 10)
                                    {
                                        <i class="fa fa-timer text-warning" />
                                    }
                                    else
                                    {
                                        <i class="fa fa-timer text-danger" />
                                    }

                                    @item.ExpireInDays Days
                                </td>
                            }
                            else
                            {
                                <td></td>
                            }
                            <td class="text-center">
                                <input type="hidden" asp-for="Id" class="userId" />
                                @if (item.HasAccess)
                                {

                                    <a class="btn btn-bl h-b" id="Generate">
                                        <i class="fa-solid fa-unlock-keyhole mr-2"></i><span> Reset or Forgot Password</span>
                                    </a>
                                    <a class="btn btn-bl update-button" data-bs-target="#mdlchangepassword" data-bs-toggle="modal" id="change">
                                        <i class="fa-solid fa-unlock-keyhole mr-2"></i>  <span>Change Password</span>
                                    </a>
                                }
                                else
                                {
                                    <a class="btn btn-outline-primary" disabled>
                                        Disabled
                                    </a>
                                }
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>

    }
    else
    {
        <div>
            <h6>No login accounts was found.</h6>
        </div>
    }
    <div class="modal fade slide-front disable-scroll" id="GenerateModel" tabindex="-1" role="dialog" aria-hidden="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form asp-action="GeneratePassword" asp-route-Id="@Model.Id" method="get">
                    <div class="modal-body">

                        <div class="row" style="justify-content:center;">
                            <div class="col-md-12">
                                <div class="form-group form-group-default">
                                    <input type="hidden" class="copyTemp" />
                                    <p class="ptext">

                                        Are you sure to generate temprory password and request to use the same at re-login ?
                                    </p>


                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="modal-footer" style="border: none;justify-content:flex-end;">
                        <button type="submit" class="btn btn-primary" data-dismiss="modal" style="border: 1px solid silver;"><i class="fa fa-check"></i> Confirm</button>
                        <button type="button" class="btn btn-cancel dismissmodal" data-dismiss="modal" style="border: 1px solid silver;"><i class="fa fa-times-circle"></i> Cancel</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
    </div>

    <footer>
        <div class="row text-start">
            <div class="col-md-12 col-sm-12">
                <a asp-action="dashboard" class="fs-14"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
            </div>
        </div>
    </footer>
</div>
@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#global-loader").hide();
        });
        $("#global-loader").hide();
        // $(document).on('click', '.Generate', function () {
        $('#Generate').click(function () {
            debugger
            $('#GenerateModel').modal('show');
        });

        $(document).on('click', '.copyval', function () {

            // Get the text field
            var copyText = $(".copyTemp").val();
            // Select the text field
            var $temp = $("<input>");
            $("body").append($temp);
            $temp.val($(".copyTemp").val()).select();
            document.execCommand("copy");
            $temp.remove();

        });
        $(document).on('click', '.dismissmodal', function () {
            $('#GenerateModel').modal('hide');
        });
    </script>

    <script type="text/javascript">
        document.getElementById("ddchg").addEventListener("change", function () {

            var selectedValue = this.value;
            if (selectedValue != "1") {
                $("#Generate").removeClass("h-b");
                $("#change").addClass("h-b");
                //$("#txt").text("we recommend using the system-generated password, which is considered secure. However, if you prefer, you can create a new password of your choice to make sure it’s in line with the company’s security policies.");

            } else {
                $("#Generate").addClass("h-b");
                $("#change").removeClass("h-b");
                //  $("#txt").text("we recommend using the system-generated password, which is considered secure. However, if you prefer, you can create a new password of your choice to make sure it’s in line with the company’s security policies.");
            }

        });

    </script>
}